{
  "exec": "node -r ts-node/register/transpile-only ./src/server/index.ts",
  "env": {
    "TS_NODE_PROJECT": "tsconfig.json"
  },
  "ext": "js,jsx,ts,tsx",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "src/client/",
    "src/minecraft-agent/",
    "**/__test__/**/*.js",
    "**/__test__/**/*.ts"
  ],
  "restartable": "rs",
  "watch": ["src/server", "src/shared"]
}
